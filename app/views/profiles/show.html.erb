<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Your Profile</h1>

  <div class="bg-white shadow-md rounded-lg p-8 mb-8">
    <p class="text-gray-700">
      <strong>Email:</strong> <%= @user.email %>
    </p>
    <p class="text-gray-700">
      <strong>Total Recommendations:</strong> <%= @recommendations.count %>
    </p>
    <p class="text-gray-700">
      <strong>Votes Received:</strong> <%= @votes_received_count %>
    </p>
  </div>

  <h2 class="text-xl font-semibold mb-4">Your Recommendations</h2>
  <% if @recommendations.any? %>
    <% @recommendations.each do |recommendation| %>
      <div class="bg-white shadow-md rounded-lg p-6 mb-4">
        <h3 class="font-semibold text-lg"><%= link_to recommendation.book.title, book_path(recommendation.book) %></h3>
        <p class="text-gray-800 mb-4"><%= recommendation.review %></p>
        <p class="text-gray-500 text-sm">
          <%= recommendation.created_at.strftime('%Y-%m-%d') %> |
          <%= recommendation.vote_count %> votes
        </p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">You haven't made any recommendations yet.</p>
  <% end %>
</div>