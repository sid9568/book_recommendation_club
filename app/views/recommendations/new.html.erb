<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Add Recommendation for <%= @book.title %></h1>

  <%= form_with model: [@book, @recommendation], local: true, class: 'bg-white shadow-md rounded-lg p-8 space-y-6' do |form| %>
    <% if @recommendation.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">
          <%= pluralize(@recommendation.errors.count, "error") %> prohibited this recommendation from being saved:
        </strong>
        <ul class="list-disc ml-4">
          <% @recommendation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :review, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :review, rows: 4, class: 'mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
    </div>

    <div>
      <%= form.submit 'Add Recommendation', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  <% end %>

  <%= link_to 'Back to Book', book_path(@book), class: 'inline-block mt-4 text-indigo-600 hover:text-indigo-800' %>
</div>